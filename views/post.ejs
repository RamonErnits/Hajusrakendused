<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <title>Posts</title>

</head>

<body>

    <%- include('partials/navbar') %>

        <!-- Create Post layout to be able to post cars -->
        <div id="app">
            <form action="/cars" method="POST">
                <div class="container py-5 h-100">
                  <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                      <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
              
                          <div class="mb-md-5 mt-md-4 pb-5">
              
                            <h2 class="fw-bold mb-2 text-uppercase">Create Post</h2>
                            <p class="text-white-50 mb-5">Please enter your Post Details</p>
              
                            <div class="form-outline form-white mb-4">
                              <input type="name" required name="brand"
                              placeholder="enter the brand" class="form-control form-control-lg" />
                              <label class="form-label" for="typeEmailX">Brand</label>
                            </div>
              
                            <div class="form-outline form-white mb-4">
                              <input type="name" required name="model"
                              placeholder="enter the model" class="form-control form-control-lg" />
                              <label class="form-label" for="typePasswordX">Model</label>
                            </div>
    
                            
                            <div class="form-outline form-white mb-4">
                                <input  type="number" required name="price"
                                placeholder="enter the price" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Price</label>
                              </div>
    
                              
                            <div class="form-outline form-white mb-4">
                                <input ype="name" required name="year"
                                placeholder="enter the year" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Year</label>
                              </div>
    
                              
                            <div class="form-outline form-white mb-4">
                                <input type="name" required name="seller"
                                placeholder="enter the seller" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Seller</label>
                              </div>
    
                              
                            <div class="form-outline form-white mb-4">
                                <input input type="name" required name="owner"
                                placeholder="enter the owner" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Owner</label>
                              </div>
    
                              
                            <div class="form-outline form-white mb-4">
                                <input input type="name" required name="location"
                                placeholder="enter the location" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Location</label>
                              </div>
    
                              
                            <div class="form-outline form-white mb-4">
                                <input input type="name" required name="color"
                                placeholder="enter the color" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Color</label>
                              </div>
              
                              <div id="success"></div>
                            <button class="btn btn-outline-light btn-lg px-5"  id="sendMessageButton" type="submit">Add
                                new Post</button>
              
                         
              
                          </div>
              
                        </form>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



</body>


<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
    crossorigin="anonymous"></script>
<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>

<script>


    /*if the submit button is clicked save inserted data to database and display it in the my posts page */
    $(document).ready(function () {
        $("#postForm").submit(function (e) {
            e.preventDefault();
            var brand = $("#brand").val();
            var price = $("#price").val();
            var seller = $("#seller").val();
            var location = $("#location").val();
            alert("Your post has been submitted successfully");
            $.ajax({
                url: "/myposts",
                type: "POST",
                data: {
                    brand: brand,
                    price: price,
                    seller: seller,
                    location: location
                },
                success: function (data) {
                    console.log(data);
                    window.location.href = "/myposts";
                }
            });
        });
    });










</script>

</body>

</html>